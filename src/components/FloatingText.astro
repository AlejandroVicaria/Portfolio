---
const {text, leftToRight, marginTop} = Astro.props;
---


<div class="-z-20 select-none whitespace-nowrap font-semibold">
  <span class:list= {
    [{
      "text-binary" : true,
      "reversed": leftToRight === true ? true : false,
    }]
  } style={{marginTop: marginTop}}>{text}</span>
</div>

<style>
  @keyframes move {
    0% {
      left: -80%;
    }
    100% {
      left: 140%;
    }
  }

  .reversed {
    animation-direction: reverse !important;
  }

  .text-binary {
    color: var(--terciary-color);
    animation: move;
    position: fixed;
    font-size: 5em;
    animation-duration: 10s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
  }
</style>